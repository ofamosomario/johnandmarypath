<div class="container">

  <div class="row" style="margin-top:20px">
      <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <fieldset>
          <h2>Atualizar Conta</h2>
          <hr class="colorgraph">
          <div class="form-group">
            <%= f.input :full_name, autocomplete: "off", required: false, class: 'form-control input-lg', label: 'Nome completo' %>
          </div>
          <div class="form-group">
            <%= f.input :password, autocomplete: "off", hint: "Deixe em branco caso não queira atualizar a senha.", required: false, class: 'form-control input-lg', label: 'Senha' %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, required: false, class: 'form-control input-lg', label: 'Confirmação da senha' %>
          </div>
          <div class="form-group">
            <%= f.input :current_password, hint: "Nós precisamos da sua senha atual para atualizar a nova.", required: true, class: 'form-control input-lg', label: 'Senha atual' %>
          </div>
          <span class="button-checkbox">
            <%= f.button :submit, "Atualizar" , class: 'btn btn-lg btn-success btn-block' %>
            <%= link_to "Cancelar conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete , class: 'btn btn-lg btn-danger btn-block' %>
          </span>
          <hr class="colorgraph">
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
          
            </div>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>