<div class="content">
  <div class="container-fluid">
    <div class="card">
      <div class="header">
          <h4 class="title">Informações operacionais</h4>
      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-12">
            <%= simple_form_for(@breadcrumb) do |f| %>
              
              <%= f.error_notification %>

              <div class="form-inputs">
                <div class="form-group">
                  <%= f.input :code, label: 'Código' %>
                </div>
              </div>

              <div class="form-inputs">
                <div class="form-group">
                  <%= f.input :name, label: 'Nome' %>
                </div>
              </div>

              <div class="form-inputs">
                <div class="form-group">
                  <%= f.input :description, label: 'Descrição' %>
                </div>
              </div>

              <div class="form-inputs">
                <div class="form-group">
                  <%= f.association :user_tested, label: 'Usuário que irá testar', label_method: :full_name %>
                </div>
              </div>

              <h4 class="title">Informações sobre os caminhos</h4>
              <br />

              <div id="paths">
                <%= f.simple_fields_for :paths do |path| %>
                  <%=render 'path_fields', f: path %>
                <% end %>
                <div class="links">
                  <div class="pull-left">
                    <%=link_to_add_association "<div class='btn btn-info btn-fill btn-wd btn-xs'>Adicionar Caminho</div>".html_safe, f, :paths %>
                  </div>
                </div>
              </div>

              <br />
              <hr />
              <br />

              <div class="row">
                <div class="col-md-12">
                  <div class="form-actions">
                    <div class="pull-left">
                      <%= f.button :submit, 'Novo Registro' %>
                    </div>
                    <div class="pull-right">
                      <%= link_to 'Voltar', breadcrumbs_path , class: 'btn btn-dark' %>
                    </div>
                  </div>
                </div>
              </div>

            <% end %>
          </div>          
        </div>
      </div>
    </div>
  </div>
</div>